# JDK Package name without extensions. Supported extensions are .rpm, .tar.gz, .exe
jdk_package: jdk-8u171-linux-x64

# apt installs jdk-8u171-linux-x64.tar.gz package at /usr/java/jdk1.8.0_171.
jdk: jdk1.8.0_171

# Java security files for FDA
jce_policy_files: UnlimitedJCEPolicyJDK8

# Target of jce policy files changes according to Java version. jce_policy_files_target variables is defined as array to manage single or multiple targets. 
jce_policy_files_target:
  - name: limited 
    path: /usr/java/jdk1.8.0_171-amd64/jre/lib/security/policy/limited
  - name: unlimited
    path: /usr/java/jdk1.8.0_171-amd64/jre/lib/security/policy/unlimited

# Application server details
app_server: wildfly
app_server_version: 11.0.0.Final
app_server_link: wildfly-11

# Service Name
app_service_name: wildfly-sit

# bin/standalone-xxx.conf properties
java_opts_Xms: 1G
java_opts_Xmx: 1G
java_opts_MetaspaceSize: 512M
java_opts_MaxMetaspaceSize: 512M

# Application driver files
app_driver_files:
  - name: microsoft
    domain: com

# Profile offset for Wildfly or Jboss application server
jboss_socket_binding_port_offset: 100

# JBOSS-CLI scripts to run for updating standalone.xml file.
# These scripts add logger, jms queues, drivers, and database details in standalone.xml file.
jboss_cli_scripts:
  - name: add_jdbc_driver_mssql.cli
  - name: fix_headers.cli
