[Unit]
Description=The WildFly Application Server
After=syslog.target network.target
Before=httpd.service

[Service]
Environment=LAUNCH_JBOSS_IN_BACKGROUND=1
EnvironmentFile=-/etc/wildfly/wildfly-{{env}}.conf
User={{wildfly_user}}
LimitNOFILE=102642
PIDFile=/var/run/wildfly/wildfly-{{env}}.pid
ExecStart={{wildfly_home_path}}/bin/launch-{{env}}.sh $WILDFLY_MODE $WILDFLY_CONFIG $WILDFLY_BIND
StandardOutput=null

[Install]
WantedBy=multi-user.target
